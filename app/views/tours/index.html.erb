<div class="small-12 columns">
<% if user_signed_in? %> 
<!-- Search bar -->
<%= form_tag({}, {:method => "get"}) do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :firstname => nil %>
  </p>
<% end %>

<!-- Search result -->
<% if @tours.present? %>
  <% @tours.each do |tour| %>
    <%= tour.firstname %>
    <% end %>
<% else %>
  <p>There are no name containing the term(s) <%= params[:search] %>.</p>
<% end %>



<div>
  
</div>
<div class="form-style-9">

  
<h1>Listing tours</h1>

<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Tour Type</th>
      <th>Day</th>
      <th>Time</th>
      <th>Description</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.firstname%> <%= tour.lastname%></td>
        <td><%= tour.tourtype %></td>
        <td><%= tour.day.strftime("%d %b %Y") %></td>
        <td><%= tour.time.strftime("%H:%M %p")  %></td>
        <td><%= tour.description %></td>
        <td><%= link_to 'Show', tour %>
        <!-- Only show if current user is admin-->
       <% if current_user.admin? %>
       | <%= link_to 'Edit', edit_tour_path(tour) %>
        <%= button_to 'Destroy', tour, method: :delete, class: 'small button round', data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<!--<%= link_to 'New Tour', new_tour_path, class: 'small button round' %>-->

</div>
</div>
<% end %>
